<script type="text/javascript">
	var jQ = jQuery.noConflict();
    function airbnbActivate(pStatus,buttonId,element)
    {
        document.getElementById(element).style.display = "none";
        document.getElementById("active"+buttonId).style.display ="none";
        document.getElementById("hide"+buttonId).style.display ="none";
        document.getElementById("loadingSpace"+buttonId).innerHTML = "<img src='<?php echo $this->getSkinUrl('images/ajax-loader-small.gif'); ?>' />";
        var xmlhttp = getHttp();
        xmlhttp.onreadystatechange=function()
        {
            if (xmlhttp.readyState==4 && xmlhttp.status==200)
            {
                window.location.href = "<?php echo Mage::helper('airhotels/productconfiguration')->getyourlisturl() ?>";
            }
        }
        var productId = document.getElementById("productId"+buttonId).value;
        xmlhttp.open("GET","<?php echo Mage::getBaseUrl() . 'property/general/status/' ?>"+"?status="+pStatus+"&buttonid="+buttonId+"&productid="+productId,true);
        xmlhttp.send();
    }
    function getHttp(){
        var xmlhttp;
        if (window.XMLHttpRequest)
        {// code for IE7+, Firefox, Chrome, Opera, Safari
            xmlhttp=new XMLHttpRequest();
        }
        else
        {// code for IE6, IE5
            xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
        }
        return xmlhttp;
    }

    function propertySearch(){
        var fromDate = jQuery("#propertyfrom").val();
        var toDate = jQuery("#propertyTo").val();
        if(fromDate == "" || fromDate == "yyyy-mm-dd" || toDate == "" || toDate == "yyyy-mm-dd"){
           alert('<?php echo $this->__("Invalid dates, Please kindly check it."); ?>');
          return false;
        }
    }
    function clearForm(){
    	jQ("#propertyfrom").attr("value","yyyy-mm-dd");
    	jQ("#propertyTo").attr("value","yyyy-mm-dd");
    	jQ("#bookclear").attr("value","1");
    }
</script>
